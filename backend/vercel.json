{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium-browser"
  },
  "functions": {
    "backend/server.js": {
      "maxDuration": 60,
      "memory": 3008
    }
  }
}